<h1>Eat Dat Burger!</h1>

<img src="/assets/img/burger.png" alt="yummyburger">

<div>
    <h2>Burgers to Eat!</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
            <p>{{burger_name}}</p> <button id="burgerDev" data-id={{id}} type="submit"> Devour it!</button>
        </li>
        {{/unless}}
        {{/each }}
    </ul>
</div>

<div class="shift">
    <h2> Burgers Eaten! </h2>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
            <p>{{burger_name}}</p>
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>

<div>
    <h2> Add a Burger </h2>
    <form class=" create-form">
        <label for="burgerForm">Burger Name:</label>
        <input type="text" id="burgerForm" name="name">


        <button type="submit">Add Burger</button>

    </form>
</div>